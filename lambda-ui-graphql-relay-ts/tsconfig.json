{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@atoms": ["src/components/atoms/index.tsx"],
      "@molecules": ["src/components/molecules/index.tsx"],
      "@organisms": ["src/components/organisms/index.tsx"],
      "@template": ["src/components/template/index.tsx"],
      "@pages": ["src/components/pages/index.tsx"],
      "@components/*": ["src/components/*"],
      "@contexts": ["src/utils/contexts/index.tsx"],
      "@contexts2": ["src/globals/contexts/index.tsx"],
      "@reducers": ["src/globals/reducers/index.tsx"],
      "@states": ["src/globals/states/index.tsx"],
      "@useContexts": ["src/globals/use-contexts/index.tsx"],
      "@hooks": ["src/utils/hooks/index.tsx"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
